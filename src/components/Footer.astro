---
import { Github, Linkedin, Mail } from 'lucide-react';
import { FaLinkedinIn, FaGithub } from "react-icons/fa";
---

<footer class="bg-slate-900 text-white py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-center">
      <div class="mb-6 md:mb-0">
        <h3 class="text-2xl font-bold bg-gradient-to-r from-teal-400 to-blue-400 bg-clip-text text-transparent">
          Matías Fabio
        </h3>
        <p class="text-slate-400 mt-2">
          Técnico universitario en Programación.
        </p>
      </div>
      
      <div class="flex items-center space-x-4">
        <button class="p-2 text-slate-400 hover:text-white transition-colors">
          <a href='https://github.com/Matias-fabio' target="_blank" rel="noopener noreferrer">
            <FaGithub className="h-5 w-5" />
          </a>
        </button>
        <button class="p-2 text-slate-400 hover:text-white transition-colors">
          <a href='https://www.linkedin.com/in/matias-fabio/' target="_blank" rel="noopener noreferrer">
            <FaLinkedinIn className="h-5 w-5" />
          </a>
        </button>
        <button class="p-2 text-slate-400 hover:text-white transition-colors">
          <Mail className="h-5 w-5" />
        </button>
      </div>
    </div>
    
    <div class="border-t border-slate-800 mt-8 pt-8 text-center">
      <p class="text-slate-400">
        © 2025 Matías Fabio. Todos los derechos reservados.
      </p>
    </div>
  </div>
</footer>
