---
import { Download, Github, Linkedin } from "lucide-react";
import { Image } from "astro:assets";
import { FaLinkedinIn, FaGithub } from "react-icons/fa";
---

<section
  id="inicio"
  class="min-h-screen flex items-center justify-center pt-20 px-4 sm:px-6 lg:px-8"
>
  <div class="max-w-7xl mx-auto">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <div class="text-center lg:text-left">
        <div
          class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-teal-100 text-teal-800 dark:bg-teal-900 dark:text-teal-200 mb-6"
        >
          <a
            href="https://www.linkedin.com/in/matias-fabio/"
            target="_blank"
            rel="noopener noreferrer">✨ Disponible para trabajar</a
          >
        </div>

        <h1
          class="text-4xl sm:text-5xl lg:text-6xl font-bold text-slate-900 dark:text-white mb-6"
        >
          Hola soy{" "}
          <span
            class="bg-gradient-to-r from-teal-600 to-blue-600 bg-clip-text text-transparent"
          >
            Matías
          </span>
          ,<br />
          Y Soy{" "}
          <span
            class="bg-gradient-to-r from-teal-600 to-blue-600 bg-clip-text text-transparent"
          >
            Técnico en Programación
          </span>
        </h1>

        <p class="text-lg text-slate-600 dark:text-slate-300 mb-8 max-w-2xl">
          Resido en Buenos Aires, Argentina, y recientemente finalicé la
          Tecnicatura Universitaria en Programación en la UTN. Además, me
          capacito de forma autodidacta, para estar al día con las mejores
          prácticas y adquirir una mayor experiencia en el desarrollo de
          software.
        </p>

        <div
          class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
        >
          <a
            href="../../public/CV/CV_MatiasFabio.pdf"
            download="CV_MatiasFabio.pdf"
            class="inline-flex items-center px-6 py-3 rounded-lg text-white bg-gradient-to-r from-teal-600 to-blue-600 hover:from-teal-700 hover:to-blue-700 transition-all duration-200 font-medium"
          >
            <Download className="mr-2 h-4 w-4" />
            Descargar CV
          </a>
          <div class="flex gap-2 justify-center">
            <a
              class="p-3 rounded-lg border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors"
              href="https://www.linkedin.com/in/matias-fabio/"
              target="_blank"
              rel="noopener noreferrer"
            >
              <FaLinkedinIn className="h-5 w-5" />
            </a>
            <a
              href="https://github.com/Matias-fabio"
              class="p-3 rounded-lg border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-800 transition-colors"
              rel="noopener noreferrer"
              target="_blank"
            >
              <FaGithub className="h-5 w-5" />
            </a>
          </div>
        </div>
      </div>

      <div class="flex justify-center lg:justify-end">
        <div class="relative">
          <div
            class="w-80 h-80 rounded-full bg-gradient-to-br from-teal-400 to-blue-500 p-1"
          >
            <div
              class="w-full h-full rounded-full bg-white dark:bg-slate-900 flex items-center justify-center overflow-hidden"
            >
              <img
                src="/images/avatar.png"
                alt="Matías - Programador"
                width="300"
                height="300"
                class="object-cover"
              />
            </div>
          </div>
          <div
            class="absolute -top-4 -right-4 w-20 h-20 bg-yellow-400 rounded-full animate-bounce"
          >
          </div>
          <div
            class="absolute -bottom-4 -left-4 w-16 h-16 bg-pink-400 rounded-full animate-pulse"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
