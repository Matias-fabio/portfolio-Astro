---
import { Code2, Icon} from 'lucide-react';
import { SiJavascript, SiReact, SiPython, SiHtml5, SiCss3, SiGit, SiMysql } from 'react-icons/si';
import { TbBrandCSharp } from 'react-icons/tb';
import { FaGithub } from 'react-icons/fa';
import { FaJava } from "react-icons/fa";


const skills = [
  { name: "JavaScript", Icon: SiJavascript , level: "B치sico", color: "bg-yellow-500 bg-gradient-to-r from-yellow-300 to-yellow-500" },
  { name: "React", Icon: SiReact , level: "Intermedio", color: "bg-blue-500 bg-gradient-to-r from-blue-400 to-blue-600" },
  { name: "C#", Icon: TbBrandCSharp , level: "Intermedio", color: "bg-purple-500 bg-gradient-to-r from-purple-400 to-purple-600" },
  { name: "Python", Icon: SiPython, level: "Intermedio", color: "bg-green-600 bg-gradient-to-r from-green-400 to-green-600" },
  { name: "HTML5", Icon: SiHtml5, level: "Avanzado", color: "bg-orange-400 bg-gradient-to-r from-orange-400 to-orange-600" },
  { name: "CSS3", Icon: SiCss3, level: "Avanzado", color: "bg-blue-400 bg-gradient-to-r from-purple-400 to-blue-600" },
  { name: "Git", Icon: SiGit, level: "Intermedio", color: "bg-red-500 bg-gradient-to-r from-red-400 to-red-600" },
  { name: "Mysql", Icon: SiMysql, level: "B치sico", color: " bg-gradient-to-r from-blue-500 to-blue-700" },
  { name: "GitHub", Icon: FaGithub, level: "B치sico", color: "bg-gray-500 bg-gradient-to-r from-gray-400 to-gray-600" },
  { name: "Java", Icon: FaJava, level: "B치sico", color: "bg-green-500 bg-gradient-to-r from-red-300 to-red-500" }
];
---

<div class="h-fit bg-white/50 dark:bg-slate-800/50 backdrop-blur-sm border-0 shadow-xl rounded-lg">
  <div class="p-6">
    <h3 class="flex items-center gap-2 text-2xl font-semibold text-slate-900 dark:text-white mb-6">
      <Code2 className="h-6 w-6 text-teal-600" />
      Habilidades
    </h3>
    
    <div class="grid grid-cols-2 gap-4">
      {skills.map((skill) => (
        <div class="flex flex-col items-center p-4 rounded-lg bg-slate-50 dark:bg-slate-700/50 hover:bg-slate-100 dark:hover:bg-slate-700 transition-colors">
          <div class={`w-12 h-12 ${skill.color} rounded-lg flex items-center justify-center mb-2`}>
            {skill.Icon && <skill.Icon className="h-6 w-6 text-white" />}
          </div>
          <h4 class="font-medium text-slate-900 dark:text-white text-sm text-center">
            {skill.name}
          </h4>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-slate-200 text-slate-800 dark:bg-slate-600 dark:text-slate-200 mt-1">
            {skill.level}
          </span>
        </div>
      ))}
    </div>
  </div>
</div>
